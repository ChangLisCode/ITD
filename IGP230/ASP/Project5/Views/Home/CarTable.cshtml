@{
    ViewData["Title"] = "CarTable";
}

<h1>Car Table</h1>
<!DOCTYPE html>
<html>
<head>
  <title>Car Table</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }
    
    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    
    th {
      background-color: #f2f2f2;
    }
  </style>
</head>
<body>
  <table>
    <tr>
      <th>Brand</th>
      <th>Model</th>
      <th>Year</th>
    </tr>
    <tr>
      <td>Ford</td>
      <td>Mustang</td>
      <td>2022</td>
    </tr>
    <tr>
      <td>Chevrolet</td>
      <td>Camaro</td>
      <td>2021</td>
    </tr>
    <tr>
      <td>Toyota</td>
      <td>Corolla</td>
      <td>2023</td>
    </tr>
  </table>
</body>
</html>
